<!--JUMBOTRON-->
<div class="jumbotron">
  <div class="container jumbo-container">
    <div class="d-flex align-content-between flex-column">

        <div class="mb-auto mb-4">
          <h1 class="jumbo-text">COOKING CHALLENGE</h1>
        </div>

      <div class="p-2 jumbo-body mb-5">
        <p>et la fête s'invite<br>
        dans les assiètes</p>
      </div>

        <div class="">
          <% if user_signed_in? %>
            <%= link_to 'CHALLENGE TES AMIS', new_challenge_path, :class => "btn btn-primary btn-lg jumbo-button" %>
          <% else %>
            <%= link_to 'CHALLENGE TES AMIS', new_user_session_path, :class => "btn btn-primary btn-lg jumbo-button" %>
          <% end %>
        </div>
    </div>
  </div>  
</div>

<!--ETAPE-->
<div class="container">

  <div class="mb-5">
    <h2 class="text-center">Un Cooking Challenge c'est simple<br>comme une bonne recette</h2>
  </div>

  <div class="row">
    <div class="col-lg-4 col-md-4 col-xs-12">
      <div>
        <div  class="mx-auto">
          <%= image_tag "food.png", :class => "landing-icon mx-auto d-block" %>
        </div>
           
        <div class="card-body">
          <h4 class="card-title text-center red-text">
            Crée ton challenge
          </h4>
          <p class="card-text text-center">
            Choisis un thème culinaire<br>
            et invite tes amis à participer<br>
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-4 col-xs-12">
      <div>
        <div class="mx-auto">
          <%= image_tag "cooking.png", :class => "landing-icon mx-auto d-block" %>
        </div>
        
        <div class="card-body">
          <h4 class="card-title text-center red-text">
            Accède à ton espace
          </h4>
          <p class="card-text text-center">
            Chaque invité pourra découvrir
            sa recette à réaliser et planifier son dîner.
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-4 col-xs-12">
      <div>
        <div  class="mx-auto">
          <%= image_tag "taste.jpg", :class => "landing-icon2 mx-auto d-block" %>
        </div>
        
        <div class="card-body">
          <h4 class="card-title text-center red-text">
            C'est qui le chef !
          </h4>
          <p class="card-text text-center">
            Note la prestations des
            autres participants et découvre qui remporte le challenge.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!--CONTAINER ROUGE-->

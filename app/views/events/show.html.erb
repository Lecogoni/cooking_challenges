<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
  
<!--- Challenge info-->
    <% if Event.where(user_id: current_user.id).where.not(challenge_id: @event.challenge.id).count == 0 %>
    <div class="col-lg-12">
    <% else %>
    <div class="col-lg-8">
    <% end %>
      <div class="bs-component">
        <div class="card mb-3">

          <div class="card-header d-flex w-100 justify-content-between">
            <h2 class="mb-1 text-muted"><%= @event.challenge.title.upcase %></h2>
            <span class="badge bg-dark text-sm-start"><%= @event.challenge.status %></span>
          </div>

          <div class="card-body">
            <h5 class="card-title">Ici le theme</h5>
            <h6 class="card-subtitle text-muted">Support card subtitle</h6>
          </div>

          <div class="card-body">
            <h6 class="card-subtitle text-muted mb-2">description, message du créateur :</h6>
            <p class="card-text"><%= @event.challenge.description %></p>
          </div>

          <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
          </svg>
          <!-- info du current_user à propos du challenge -->
          <div class="card-body">
            <div class="row">

              <div class="col-lg-6">
                <h6 class="card-subtitle text-muted mb-2">ma participation est : <%= @event.participation %></h6>
                <!-- bouton participation -->
                <%= link_to 'participation', toggle_participation_event_path, method: 'post'%>

              </div>

              <div class="col-lg-6">

                <h6 class="card-subtitle text-muted mb-2">le statut de mon événement est : <%= @event.status %></h6>
                <!-- bouton event status -->
                <%= link_to 'check', toggle_status_event_path, method: 'post'%>
                
                <div class="custom-control custom-switch" id="event-status-toggle">
                  <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                  <label class="custom-control-label" for="customSwitch1">Toggle this switch element</label>
                </div>
              </div>
              
            </div>
            <!-- -->
            <div>
              <% if @event.status == "done" %>
                <h6 class="card-subtitle text-muted mb-2">Ma notation : </h6>
                <table>
                  <thead>
                      <tr>
                          <th scope="col">Participant</th>
                          <th scope="col">Statut</th>
                          <th scope="col">ma note</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% @event_surveys = @event.surveys %>
                      <% @event_surveys.each do |survey| %>
                        <tr>
                            <th scope="row"><%= survey.surveyor.username.capitalize %></th>
     
                        </tr>
                      <% end %>
                      
                  </tbody>
                </table>
              
              <% end %> 
            </div>

          </div>

          <!-- Liste des autres participants -->
          <div class="card-body">
            <h5 class="card-subtitle text-muted mb-4">Recap des autres événements du challenge :</h5>

            <% @this_event = Event.where(challenge_id: @event.challenge.id).where.not(user_id: current_user.id) %>
            <% @this_event.each do |event| %>
              <div class="row">

                <div class="col-md-3">
                

                
                  <div class="d-flex justify-content-start">
                    <div class="d-flex justify-content-start mr-2">
                      <div class="mr-3">
                        <% if event.participation == "pending" %>
                          <span class=""><i class="fa fa-check-circle" style="color:lightgray"></i></span>
                        <% elsif event.participation == "confirmed" %>
                          <span class=""><i class="fa fa-check-circle" style="color:indianred"></i></span>
                        <% else %>
                          <i class="fas fa-ban"></i>
                        <% end %>
                      </div>
                      <div>
                        <%= event.user.username.capitalize %>
                      </div>
                    </div>
                    <div>
                      <% if event.user.id == current_user.id || event.role == "créateur" %>
                        <span class="badge bg-light text-dark"><%= event.role %></span>
                      <% end %>
                    </div>
                  </div>

                </div>

                <div class="col-md-9">

                  <div class="d-flex justify-content-between">
                    <div class="d-flex justify-content-start">
                      <div class="mr-3">
                        <% if event.participation == "pending" %>
                          <p>
                            n'a pas encore confirmé sa participation
                          </p>
                        <% elsif event.participation == "abord" %>
                          <p>
                            a décliné le challenge
                          </p>
                        <%  elsif event.participation == "confirmed"  %>
                          <% if event.status == "unscheduled" %>
                            son événement n'est pas encore planifié
                          <% elsif event.status == "scheduled" %>
                            son événement est programmé
                          <% elsif event.status == "done" %>
                            L'événement de <%= event.user.username.capitalize %> est passé, c'est evalution time<br><br>
                            <% @surveys = event.surveys %>
                            
                              <% @currentUser_survey = Survey.where(event_id: event.id, surveyor_id: current_user.id)[0] %>
                              <% if @currentUser_survey.created_at == @currentUser_survey.updated_at %>
                                <div class="row">
                                  <div class="col-md-9">
                                    Tu pourras voir la note des autres participants uniquement après avoir compléter ton évalution
                                  </div>
                                  <div class="col-md-3">
                                    bouton acces survey
                                  </div>
                                </div> 
                              <% else %>

                                <% @surveys.each do |survey| %>

                                  <ul>
                                    <% if survey.created_at != survey.updated_at %>
                                      <li><%= survey.surveyor.username %> a donnée la note de : <%= survey.total_grade %></li>
                                    <% else %>
                                      <li><%= survey.surveyor.username %> n'a pas encore noté</li>
                                    <% end %>
                                  </ul>

                                <% end %>

                              <% end %>
                               
                            
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>

            
                </div>

              </div>
              <hr>

            <% end %>
          </div>
          <!-- Card Footer -->
          <div class="card-footer text-muted">
            2 days ago
          </div>
        </div>
      </div>
    </div>

<!--Other current_user challenge-->
    <div class="col-lg-4">
      <div class="bs-component">
        <div class="list-group">
          <% @my_sessions = Event.where(user_id: current_user.id).where.not(challenge_id: @event.challenge.id) %>
          <% @my_sessions.each do |session| %>
            <a href="/events/<%= session.id %>" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= session.challenge.title %></h5>
                <span class="badge bg-dark text-sm-start"><%= session.challenge.status %></span>
              </div>
              <div></div>
            </a>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>

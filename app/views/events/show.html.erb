<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
  
<!--- Challenge info-->
    <div class="col-lg-8">
      <div class="bs-component">
        <div class="card mb-3">

          <div class="card-header d-flex w-100 justify-content-between">
            <h2 class="mb-1 text-muted"><%= @event.challenge.title.upcase %></h2>
            <span class="badge bg-dark text-sm-start"><%= @event.challenge.status %></span>
          </div>

          <div class="card-body">
            <h5 class="card-title">Ici le theme</h5>
            <h6 class="card-subtitle text-muted">Support card subtitle</h6>
          </div>

           <div class="card-body">
            <h6 class="card-subtitle text-muted mb-2">description, message du créateur :</h6>
            <p class="card-text"><%= @event.challenge.description %></p>
          </div>

          <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
          </svg>

           <div class="card-body">
            <div class="row">

              <div class="col-lg-6">
                <h6 class="card-subtitle text-muted mb-2">ma participation est : <%= @event.participation %></h6>
              </div>

              <div class="col-lg-6">

                <h6 class="card-subtitle text-muted mb-2">le statut de mon événement est : <%= @event.status %></h6>

                <%= link_to 'check', toggle_status_event_path, method: 'post'%>
                
                <div class="custom-control custom-switch" id="event-status-toggle">
                  <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                  <label class="custom-control-label" for="customSwitch1">Toggle this switch element</label>
                </div>
              </div>
            </div>
          </div>

          <div class="card-body">
            <h6 class="card-subtitle text-muted mb-2">autres participants :</h6>
          

          <% @this_event = Event.where(challenge_id: @event.challenge.id).where.not(user_id: current_user.id) %>
      
          <% @this_event.each do |event| %>

            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-start">

                  <div class="mr-3">
                    <% if event.participation == "pending" %>
                      <span class=""><i class="fa fa-check-circle" style="color:lightgray"></i></span>
                    <% elsif event.participation == "confirmed" %>
                      <span class=""><i class="fa fa-check-circle" style="color:indianred"></i></span>
                    <% else %>
                      <i class="fas fa-ban"></i>
                    <% end %>
                    <!--
                    <% link_to event.participation, toggle_participation_event_path, method: 'post'%>
                    -->
                  </div>
                  <div>
                    <%= event.user.username.capitalize %>
                  </div>
                </div>
                <div>
                  <% if event.user.id == current_user.id || event.role == "créateur" %>
                    <span class="badge bg-light text-dark"><%= event.role %></span>
                  <% end %>
                </div>
              </div>

          <% end %>
  
          </div>
          
          <div class="card-footer text-muted">
            2 days ago
          </div>
        </div>
      </div>
    </div>
<!--Other current_user challenge-->
    <div class="col-lg-4">
      <div class="bs-component">
        <div class="list-group">
          <% @my_sessions = Event.where(user_id: current_user.id).where.not(challenge_id: @event.challenge.id) %>
          <% @my_sessions.each do |session| %>
            <a href="/events/<%= session.id %>" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= session.challenge.title %></h5>
                <span class="badge bg-dark text-sm-start"><%= session.challenge.status %></span>
              </div>
              <div></div>
            </a>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>

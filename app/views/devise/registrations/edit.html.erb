<%= devise_error_messages! %>

<div class="container">
  <h2>Modifier <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :mot_de_passe %> <i>(à laisser vide si tu ne veux pas le changer)</i><br />
      <%= f.password_field :password, autocomplete: "nouveau-mot-de-passe" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> charactères minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :confirmation_de_mot_de_passe %><br />
      <%= f.password_field :password_confirmation, autocomplete: "nouveau-mot-de-passe" %>
    </div>

    <div class="field">
      <%= f.label :mot_de_passe_actuel%> <i>(nous avons besoin de ton mot de passe actuel pour confirmer tes changements)</i><br />
      <%= f.password_field :current_password, autocomplete: "mot-de-passe-actuel" %>
    </div>

    <div class="actions">
      <%= f.submit "Mise à jour" %>
    </div>
  <% end %>

  <h3>Supprimer mon compte</h3>

  <p>Mécontent ? <%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Es-tu vraiment certain ?" }, method: :delete %></p>

  <%= link_to "REtour", :back %>
</div>
<%= devise_error_messages! %> 
<div class="container m-4">
 
  
  <div class="row">
    <div class="col-6">
      <%= image_tag "challenge.jpg", :class => "fork-img" %>
    </div>
    <div class="col-6">
      <h2>S'inscrire</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <div class="field">
        <%= f.label :nom %><br>
        <%= f.text_field :username, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :mot_de_passe %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "nouveau-mot-de-passe" %>
      </div>

      <div class="field">
        <%= f.label :confirmation_du_mot_de_passe %><br />
        <%= f.password_field :password_confirmation, autocomplete: "nouveau-mot-de-passe" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "S'inscrire", :class => 'btn btn-outline-primary' %>
      </div>

      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
  

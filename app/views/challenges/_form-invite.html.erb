<div class="text-center">
      <h5>Etape 3 : Les convives</h5>
</div>
  <% @guests = @challenge.guests %>

    <div class="p-2">
    <% @guests.each do |guest| %>

      <%= form_with(model: guest) do |form| %>

        <%= hidden_field_tag(:challenge, @challenge.id) %>


        <div class="row d-flex justify-content-center">

          <div class="form-group mr-4">
            <%= form.label :username, class: "col-md-4 control-label" %> <%= form.text_field :username, required: true, class: "form-control" %>
          </div>

          <div class="form-group mr-4">
            <%= form.label :email %> <%= form.email_field :email, required: true, class: "form-control"  %>
          </div>
          
          <div class="actions pt-4">
            <%= form.submit "inviter", class: "btn btn-outline-primary"%>
          </div>

        </div>


      <% end %>
    <% end %>

    <div class="row d-flex justify-content-center">
      <% if @guests.all? { |guest| guest.created_at != guest.updated_at  } == true %>
        <%= link_to 'Valider', user_path(current_user), :class => "btn btn-primary btn-lg" %>
      <% else %>
        <a href="#" class="btn btn-secondary btn-lg disabled" role="button" aria-disabled="true">valider</a>
      <% end %>
    </div>
    <div class="row d-flex justify-content-center mt-3">
      
      <%= link_to 'Annuler', @challenge, method: :delete, :class => "btn btn-outline-secondary btn-sm", data: { confirm: 'Es tu certain de vouloir supprimer ce challenge ?' } %>
    </div>
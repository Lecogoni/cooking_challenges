<div class="container">
  <%= form_with(model: challenge) do |form| %>
    <% if challenge.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(challenge.errors.count, "error") %> a empêché de sauvegarder ce challenge :</h2>
        <ul>
          <% challenge.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card p-4 mb-2">
      <div class="d-flex justify-content-center mb-3">
        <div class="text-center">
          <h5>Etape 1 : choix du thème</h5>
        </div>
      </div>

      <div class="d-flex justify-content-around font-weight-bold">
        <div class="mb-2 red-text">
          <%= form.radio_button :theme_choice, "Categorie", class: 'mr-3' %>
          <%= form.label :theme_choice, "Catégorie", required: true %>
        </div>
        <div class="mb-2 red-text">
          <%= form.radio_button :theme_choice, "area", class: 'mr-3' %>
          <%= form.label :theme_choice, "Pays"  %>
        </div>
      </div>
      <div class="text-center">
        <p class="text-muted small">Définie l'inspiration des<br>différentes recettes attribuées aux participants</p>
      </div>
    </div>


    <div class="card p-4 mb-2">
      <div class="d-flex justify-content-center mb-3">
        <div class="text-center">
          <h5>Etape 2 : nombre d'invité</h5>
        </div>
      </div>

      <div class="d-flex justify-content-around">
        <div class="mb-3 red-text"> 
          <%= form.number_field :numb_guest, in: 1..20, step: 1, required: true %>
        </div>
          </div>
        <div class="text-center">
          <p class="text-muted small">On se charge d'envoyer un mail<br>pour prévenir tes invités</p>
      </div>
    </div>
  <div>

    <div class="card p-4 mb-2">
      <div class="d-flex justify-content-center mb-3">
        <div class="text-center">
          <h5>Etape 3 : </h5>
        </div>
      </div>

      <div class="">
        <div class="text-center">
          <p class="text-muted small">Donne un titre à ton challenge</p>
        </div>
        <div class="d-flex justify-content-center">
          <%= form.text_field :title,required: true, class: 'form-control' %>
        </div>
        <div class="text-center">
          <p class="text-muted small mt-4">tu peux également ajouter, une decription, un message ..</p>
        </div>
        
        <div class="d-flex justify-content-center">
          <%= form.text_area :description, class: 'form-control' %>
        </div>
      </div>
    </div>
   <div class="d-flex justify-content-center">
      <div class="actions mt-3">
        <%= form.submit "Je valide", class: 'btn btn-outline-primary btn-lg' %>
      </div>
    </div>
    <div class="d-flex justify-content-center mb-5">
      <div class="actions mt-3">
        <%= link_to "Annuler", root_path, :class => 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>
  <% end %>
</div>